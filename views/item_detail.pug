extends layout 
block content 
  h1.title=title
  a(href=item._id + '/delete') Delete this item
  a(href=item._id + '/update') Update this item
  div.item
    div.item-text
      h5.item-heading Description:
      p.item-description #{item.description}
      h5.item-heading Category:
      a.item-category(href=item.category.url) #{item.category.name}
      p.item-price $#{item.price} 
      p.item-qty #{item.quantity} left in stock
    div.item-image-box
      if item.image !== undefined
        image(src='../images/' + item.image).item-image
      else 
        p placeholder